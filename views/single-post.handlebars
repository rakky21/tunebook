{{> post-info post}}

{{#if loggedIn}}
<form class="like-form">
  <div>
    <button type="submit" class="upvote-btn btn btn-primary btn-lg">Like</button>
  </div>
</form>
{{/if}}

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/upvote.js"></script>
<script src="/javascript/comment.js"></script>
{{/if}}