<div class="container">
  <div class="columns">

    <section class="col-4 col-mx-auto form-group">
      <h2>Create New Post</h2>

      <form class="new-post-form">
        <div>
          <label for="post-title" class="form-label bg-gray">Title of Song</label>
          <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
          <label for="post-url">Comment</label>
          <input type="text" id="post-url" name="post-url" />

        </div>
        <button type="submit" class="btn btn-primary btn-lg">Create</button>
      </form>
    </section>

    {{#if posts.length}}
    <section class="col-mx-auto">
      <h2>Your Posts</h2>
      <ol>
        {{#each posts as |post|}}
        <li>
          {{> post-info post}}
          <a href="/dashboard/edit/{{post.id}}" class="edit-link btn btn-primary btn-lg">Edit post</a>
        </li>
        {{/each}}
      </ol>
    </section>
    {{/if}}

  </div>
</div>

<script src="/javascript/add-post.js"></script>